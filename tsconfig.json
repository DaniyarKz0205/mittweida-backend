{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
